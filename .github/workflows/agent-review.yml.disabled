name: ReviewAgent - Code Quality Review

on:
  pull_request:
    types: [opened, synchronize, reopened]
  workflow_dispatch:
    inputs:
      pr_number:
        description: 'PR number to review'
        required: true
        type: number

permissions:
  contents: read
  issues: write
  pull-requests: write

jobs:
  review-code:
    name: Code Quality Review
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '20'
          cache: 'npm'

      - name: Install dependencies
        run: npm ci

      - name: Run ReviewAgent
        env:
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
          GITHUB_REPOSITORY: ${{ github.repository }}
        run: |
          PR_NUM=${{ github.event.pull_request.number || inputs.pr_number }}
          echo "üîç Reviewing PR #${PR_NUM}"
          npm run review -- --pr ${PR_NUM}

      - name: Check review score
        id: check_score
        run: |
          RESULT=$(cat .ai/review-*.json | jq -r '.score')
          echo "score=${RESULT}" >> $GITHUB_OUTPUT
          echo "üìä Quality Score: ${RESULT}/100"

          if [ "${RESULT}" -ge 80 ]; then
            echo "passed=true" >> $GITHUB_OUTPUT
            echo "‚úÖ Review PASSED (Score: ${RESULT}/100)"
          else
            echo "passed=false" >> $GITHUB_OUTPUT
            echo "‚ùå Review FAILED (Score: ${RESULT}/100 - Threshold: 80)"
          fi

      - name: Add review label
        if: steps.check_score.outputs.passed == 'true'
        uses: actions/github-script@v7
        with:
          script: |
            github.rest.issues.addLabels({
              issue_number: ${{ github.event.pull_request.number || inputs.pr_number }},
              owner: context.repo.owner,
              repo: context.repo.name,
              labels: ['‚úÖ review:approved']
            });

      - name: Add needs-work label
        if: steps.check_score.outputs.passed == 'false'
        uses: actions/github-script@v7
        with:
          script: |
            github.rest.issues.addLabels({
              issue_number: ${{ github.event.pull_request.number || inputs.pr_number }},
              owner: context.repo.owner,
              repo: context.repo.name,
              labels: ['‚ö†Ô∏è review:needs-work']
            });

      - name: Fail if score below threshold
        if: steps.check_score.outputs.passed == 'false'
        run: |
          echo "‚ùå Quality score below threshold (80)"
          exit 1

      - name: Upload review artifact
        if: always()
        uses: actions/upload-artifact@v4
        with:
          name: review-result-${{ github.event.pull_request.number || inputs.pr_number }}
          path: .ai/review-*.json
          retention-days: 30
